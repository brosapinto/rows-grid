{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}